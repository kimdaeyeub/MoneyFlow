generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String?
  github_id  String?    @unique
  avatar     String?
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt
  email      String?    @unique
  username   String
  password   String?
  expenses   Expense[]
  categories Category[]
  goals      Goal[]
}

// 지출, 목표지출, 카테고리
model Expense {
  id         String   @id @default(uuid())
  name       String
  date       DateTime
  money      Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
}

model Category {
  id       String    @id @default(uuid())
  name     String
  expenses Expense[]
  user     User      @relation(fields: [userId], references: [id])
  userId   String
  color    String
}

model Goal {
  id     String @id @default(uuid())
  week   Int
  day    Int
  month  Int
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
