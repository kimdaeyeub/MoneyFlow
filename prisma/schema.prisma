generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  email      String   @unique
  username   String
  password   String
}

// 지출, 목표지출, 카테고리
model Expense {
  id         String   @id @default(uuid())
  name       String
  date       DateTime
  money      Int
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String
}

model Category {
  id       String    @id @default(uuid())
  name     String
  expenses Expense[]
}

model Goal {
  id    String @id @default(uuid())
  week  Int
  day   Int
  month Int
}
